<SyntaxMode name = "Akkadian" mimeTypes="text/x-akk">

	<!-- COMMENTS -->

	<Span color = "Comment(Block)" rule="Comment" >
		<Begin>##</Begin>
		<End>##</End>
	</Span>
	
	<EolSpan color = "Comment(Line)" rule="Comment">#</EolSpan>
	
	<Rule name = "Comment">
	</Rule>

	<!-- STRINGS -->

	<Span color = "String" rule="String" stopateol = "true" escape='\'>
		<Begin>"</Begin>
		<End>"</End>
	</Span>
	
	<Rule name = "String">
	</Rule>
	
	<!-- KEYWORDS -->
	
	<Keywords color = "Keyword(Declaration)">
		<Word>Tbool</Word>
		<Word>Tnum</Word>
		<Word>Tset</Word>
		<Word>Tdate</Word>
		<Word>Tstr</Word>
		<Word>TboolSym</Word>
		<Word>DateTime</Word>
		<Word>bool</Word>
		<Word>int</Word>
		<Word>Thing</Word>
		<Word>Things</Word>
	</Keywords>

	<Keywords color = "Keyword(Jump)">
		<Word>Test</Word>
	</Keywords>

	<Keywords color = "Keyword(Selection)">
		<Word>Stub</Word>
	</Keywords>
	
	<Keywords color = "Keyword(Operator)">
		<Word>if</Word>
		<Word>then</Word>
		<Word>else</Word>
		<Word>match</Word>
		<Word>set</Word>
		<Word>null</Word>
		<Word>true</Word>
		<Word>false</Word>
		<Word>from</Word>
		<Word>assumes</Word>
	</Keywords>
	
</SyntaxMode>